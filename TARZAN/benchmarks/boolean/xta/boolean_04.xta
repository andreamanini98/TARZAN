  init s0;
  trans
    s0 -> s1 { guard x == 3; assign x = 0, ctr3 = 1 - ctr3; },
    s1 -> s0 { guard x == 3; assign x = 0, ctr3 = 1 - ctr3; };
}

// ========================================================
// Boolean04
// ========================================================
process Boolean04() {
  clock x;
  state s0, s1;
  init s0;
  trans
    s0 -> s1 { guard x == 4; assign x = 0, ctr4 = 1 - ctr4; },
    s1 -> s0 { guard x == 4; assign x = 0, ctr4 = 1 - ctr4; };
}

// ========================================================
// Boolean instantiations and system
// ========================================================
P01 = Boolean01();
P02 = Boolean02();
P03 = Boolean03();
P04 = Boolean04();
system P01, P02, P03, P04;
